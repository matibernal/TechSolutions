<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistroActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondogeneral"
        android:padding="16dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-364dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:contentDescription="@string/descripcionIcono"
            android:padding="16dp"
            android:src="@drawable/iconoflecha"
            android:background="@android:color/transparent"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:text="@string/registro"
            android:textColor="#000000"
            android:textSize="24sp" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/title"
            android:layout_marginTop="16dp"
            android:background="#000000" />

        <EditText
            android:id="@+id/etNombre"
            android:layout_width="488dp"
            android:layout_height="48dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="180dp"
            android:autofillHints="name"
            android:drawableStart="@drawable/iconousuario"
            android:drawablePadding="8dp"
            android:hint="@string/nombre"
            android:inputType="text"
            android:textColorHint="#000000" />

        <EditText
            android:id="@+id/etApellido"
            android:layout_width="488dp"
            android:layout_height="48dp"
            android:layout_below="@id/etNombre"
            android:layout_marginTop="8dp"
            android:autofillHints="surname"
            android:drawableStart="@drawable/iconousuario"
            android:drawablePadding="8dp"
            android:hint="@string/ingresarApellido"
            android:inputType="text"
            android:textColorHint="#000000" />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="488dp"
            android:layout_height="48dp"
            android:layout_below="@id/etApellido"
            android:layout_marginTop="8dp"
            android:autofillHints="username"
            android:drawableStart="@drawable/iconousuario"
            android:drawablePadding="8dp"
            android:hint="@string/emailUsuario"
            android:inputType="textEmailAddress"
            android:textColorHint="#000000" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="488dp"
            android:layout_height="48dp"
            android:layout_below="@id/etEmail"
            android:layout_marginTop="8dp"
            android:autofillHints="password"
            android:drawableStart="@drawable/iconoclave"
            android:drawablePadding="8dp"
            android:hint="@string/contraseÃ±aRegistro"
            android:inputType="textPassword"
            android:textColorHint="#000000" />

        <Button
            android:id="@+id/btnAceptar"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:layout_below="@id/etPassword"
            android:layout_centerInParent="true"
            android:background="#000000"
            android:layout_marginTop="40dp"
            android:text="@string/aceptar"
            android:textColor="#FBFAFA" />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
