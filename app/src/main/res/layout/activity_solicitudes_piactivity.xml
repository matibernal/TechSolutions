<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondogeneral"
        android:padding="16dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:contentDescription="@string/descripcionIcono"
            android:padding="12dp"
            android:src="@drawable/iconoflecha" />

        <TextView
            android:id="@+id/tvTituloSolicitudes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="64dp"
            android:text="Solicitudes de AtenciÃ³n"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerSolicitudes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tvTituloSolicitudes"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="8dp"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
