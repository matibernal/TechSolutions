<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    card_view:cardCornerRadius="14dp"
    card_view:cardElevation="6dp"
    card_view:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Descripción del pedido -->
        <TextView
            android:id="@+id/tvDescripcionPedido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripción del pedido"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <!-- Estado -->
        <TextView
            android:id="@+id/tvEstadoPedido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Estado: Pendiente"
            android:textSize="14sp"
            android:layout_marginTop="6dp"
            android:textColor="@color/black"/>

        <!-- Fecha -->
        <TextView
            android:id="@+id/tvFechaPedido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2025-07-12 21:00"
            android:textSize="13sp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/black"/>

        <!-- Botones (solo si está pendiente) -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="6dp">

            <Button
                android:id="@+id/btnAceptar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aceptar"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/btnRechazar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rechazar"
                android:textAllCaps="false"
                android:layout_marginStart="12dp"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
